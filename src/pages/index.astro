---
import Layout from '../layouts/Layout.astro';
// Placeholder data - this would eventually come from content collections or APIs
const latestMusic = {
  imageUrl: "/assets/images/cover-art/pookie.JPG"
}
---

<Layout title="Home - Jeremy Craig Saunders">
  <section class="md:min-h-[80vh] flex md:items-center bg-[#1A3C2F]">
    <div class="container mx-auto px-4 pt-8 md:pt-0">
      <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-12 lg:gap-16">
        <div class="w-full max-w-sm md:max-w-md md:w-5/12 lg:w-4/12 opacity-0 animate-[fadeIn_1s_ease-in_forwards]">
          <img src={latestMusic.imageUrl} alt="POOKIE Album Cover" class="rounded-3xl w-full h-auto object-cover aspect-square shadow-2xl" />
        </div>
        <div class="md:w-6/12 flex flex-col items-center md:items-start mt-4 md:mt-0">
          <h1 class="font-playfair text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold tracking-wide mb-1 md:mb-2 text-center md:text-left leading-none opacity-0 animate-[fadeIn_1s_ease-in_0.3s_forwards] text-[#E5C8A6]">HONEYBUN</h1>
          <p class="font-playfair text-lg md:text-xl lg:text-2xl tracking-widest opacity-0 animate-[fadeIn_1s_ease-in_0.6s_forwards] text-[#8B7355]">OUT NOW</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
