---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Beth+Ellen&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body class="bg-[#1A3C2F] text-[#E5C8A6] flex flex-col min-h-screen font-playfair">
		<Navbar />
		<main class="flex-grow container mx-auto px-4">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	h1 {
		@apply text-3xl font-bold md:text-4xl lg:text-5xl mb-4 text-[#E5C8A6];
	}
	h2 {
		@apply text-2xl font-semibold md:text-3xl lg:text-4xl mb-3 text-[#E5C8A6];
	}
	h3 {
		@apply text-xl font-semibold md:text-2xl lg:text-3xl mb-2 text-[#E5C8A6];
	}

	.card {
		@apply bg-[#1A3C2F] rounded-lg shadow-lg p-4 md:p-6 border border-[#8B7355];
	}
</style>
